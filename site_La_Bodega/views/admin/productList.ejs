<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <main class="container">
                <section class="row ">
                    <% wines.forEach(wine=> { %>
                        <article class="col-12 col-md-4 col-lg-3 ">
                            <ul class="list-group list-group-flush my-3 ">
                                <li class="list-group-item">
                                    <h4>
                                        <%= wine.name %>
                                    </h4>
                                </li>
                                <li class="list-group-item">
                                    <h6>
                                        $<%= wine.price_unit %>
                                    </h6>
                                </li>
                                <li class="list-group-item"><a href="" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal-<%= wine.id %> ">
                                        <%= wine.image %>
                                    </a></li>
                                <li class="list-group-item">
                                    <div class="m-2 d-flex justify-content-around">
                                        <form action="/admin/products/<%= wine.id %>/edit">
                                            <button class="btn btn-sm btn-success" type="submit">Editar</a></button>
                                        </form>
                                        <form action="/admin/products/<%= wine.id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-sm btn-danger" type="submit">Eliminar</a></button>
                                        </form>
                                    </div>
                                </li>
                            </ul>
                        </article>
                        <% }) %>
                </section>
            </main>







            <%- include('./partials/footer') %>

    </body>

</html>